    <div class="container user user-show">

   <div class="buttons">
    <a class="btn btn-default" href="/">Back</a>
    <a class="btn btn-default" href="/accounts/<%=user.id%>/edit">Edit</a>
   </div>

   <form class="user-form form-horizontal" action="/users" method="post">
    <div class="contentBox">
     <h3 class="contentBoxTop"></h3> 
     <fieldset disabled>
      <div class="form-group">
       <label for="name" class="col-sm-3">Username</label>
       <div class="col-sm-9">
        <input class="form-control" type="text" id="name" name="name" value="<%=user.username%>">
       </div>
      </div>
      <div class="form-group">
       <label for="email" class="col-sm-3">NickName</label>
       <div class="col-sm-9">
        <input class="form-control" type="text" id="email" name="email" value="<%=user.nickname%>">
       </div>
      </div>
     </fieldset>
    </div>
   </form>

  </div> <!-- container end -->

</div>
<!-- ======  Wrap section end  ====== -->

